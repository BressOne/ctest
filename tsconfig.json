{
  "compilerOptions": {
    "lib": ["ES2023", "DOM"],
    "module": "commonjs",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    },
    "strict": false,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["src/*", "src/**/*.ts"],
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts"
  ]
}
